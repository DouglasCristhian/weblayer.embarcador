<?xml version="1.0" encoding="utf-8" ?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <include
     android:id="@+id/toolbar"
     layout="@layout/toolbar"/>


    <TextView
        android:id="@+id/lblNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="18dip"
        android:textSize="18sp"
        android:text="Cliente"/>

    <EditText
      android:id="@+id/txtNomeCliente"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:textSize="18sp"
      android:editable="false"
      android:clickable="true"
      android:text=""/>
    
    <TextView
      android:id="@+id/lblValor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dip"
      android:layout_marginLeft="18dip"
      android:textSize="18sp"
      android:text="Valor"/>
    
    <EditText
      android:id="@+id/txtValorNota"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:textSize="18sp"
      android:editable="false"
      android:clickable="true"
      android:text=""/>
    
    <TextView
      android:id="@+id/lblNota"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginTop="18dip"
      android:textSize="18sp"
      android:text="Nota/Série"/>

    <EditText
      android:id="@+id/txtNota"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:textSize="18sp"
      android:editable="false"
      android:clickable="true"
      android:text=""/>
    
    <TextView
      android:id="@+id/lblDataEntrega"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginTop="18dp"
      android:textSize="18sp"
      android:text="Data da Entrega"/>

    <EditText
      android:id="@+id/txtDataEntrega"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:textSize="18sp"
      android:editable="false"
      android:clickable="true"
      android:text="---------"/>

    <TextView
     android:id="@+id/lblHoraEntrega"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="18dip"
     android:layout_marginLeft="18dip"
     android:textSize="18sp"
     android:text="Hora da Entrega"/>


    <EditText
      android:id="@+id/txtHoraEntrega"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:textSize="18sp"
      android:editable="false"
      android:clickable="true"
      android:text=""/>

    <Button
      android:id="@+id/btnConfirmarEntrega"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:layout_marginTop="20dp"
      android:textSize="18sp"
      android:text="Confirmar Entrega"
      tools:visibility="visible" />

    <TextView
       android:id="@+id/lblMensagem"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:textSize="17sp"
       android:layout_marginBottom="18dip"
       android:text="Mensagem"
       android:textColor="@android:color/holo_red_dark" />
  </LinearLayout>

</ScrollView>
