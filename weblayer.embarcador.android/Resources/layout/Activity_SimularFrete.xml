<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:focusableInTouchMode="true" >

    <include
     android:id="@+id/toolbar"
     layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/lblOrigem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dip"
        android:layout_marginLeft = "18dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Origem" />

    <EditText
        android:id="@+id/txtOrigem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop = "1dip"
        android:layout_marginRight = "18dip"
        android:layout_marginLeft = "18dip"
        android:hint="Clique para definir"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:focusable="false" />

    <TextView
      android:id="@+id/lblDestino"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Destino"/>

    <EditText
      android:id="@+id/txtDestino"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:textColor="#000000"
      android:hint="Clique para definir"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:focusable="false" />

    <TextView
      android:id="@+id/lblValorNF"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Valor NF"/>

    <EditText
      android:id="@+id/txtValorNF"
      android:layout_width= "match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:gravity="right"
      android:textColor="#000000"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:inputType="numberDecimal"/>

    <TextView
      android:id="@+id/lblPesoNF"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Peso"/>

    <EditText
      android:id="@+id/txtPesoNF"
      android:layout_width= "match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:gravity="right"     
      android:textColor="#000000"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:inputType="numberDecimal"/>

    <TextView
      android:id="@+id/lblVolume"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Volume"/>

    <EditText
      android:id="@+id/txtVolume"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="numberDecimal"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:gravity="right"
      android:textColor="#000000"
      android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
      android:id="@+id/btnEnviar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop = "20dip"
      android:textColor="#000"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Enviar"/>
  </LinearLayout>
</ScrollView>
